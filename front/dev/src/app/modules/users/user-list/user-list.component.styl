.header
    width 100%
    display flex
    justify-content space-around
    flex-wrap wrap
    background-color: #1A202C;
    align-items center
    height 90px
    padding 5px
    & .title
        font-size 32px
        font-weight 700
        color #ffffff
        padding-left 5px
        border-left 5px solid #4FD1C5
        letter-spacing 2px
    & .search
        max-width 80vw
        min-width 27vw
        background-color #2d3748
        border none
        outline none
        font-size 15px
        padding 12px 10px
        color #fff
        border-radius 3px
        &:focus
            border 1px solid #4FD1C5
    & i 
        color #fff
        position relative
        right 31px

.box
    display grid
    grid-template-columns repeat(auto-fit, minmax(300px, 1fr))
    grid-gap 26px
    place-items center
    & .list-users
        margin-top 50px
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 300px));
        grid-gap: 37px;
        width: 100%;
        place-content: center;
        & .card-user
            background-color #1A202C
            border-radius 3px
            height 155px
            color #fff
            font-size 14px
            font-weight 400
            padding 20px
            & img
                position relative
                left 170px
                top -44px
                width 88px
                height 88px
                border-radius 50%
                border 3px solid #1A202C
            & .name
                font-size 16px
                font-weight 500
            & .card-body
                top -47px
                position relative
                & .name
                    margin-bottom 5px
            & .card-footer
                display flex
                justify-content space-between
                & .fa-edit
                    color blue
                    margin-right 15px
                    cursor pointer
                & .fa-trash-alt
                    color red
                    cursor pointer

a 
    text-decoration none
    color: #68D391
    &:hover
        font-style italic
    &:visited
        color: #68D391




